{
  "name": "bizaway-be-test",
  "version": "1.0.2",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "prestart:dev": "docker compose up -d",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "pretest": "docker compose --env-file .env.test.local -f docker-compose.test.yml down -v; docker compose --env-file .env.test.local -f docker-compose.test.yml up -d",
    "test": "jest",
    "posttest": "docker compose --env-file .env.test.local -f docker-compose.test.yml down -v",
    "pretest:watch": "docker compose --env-file .env.test.local -f docker-compose.test.yml down -v; docker compose --env-file .env.test.local -f docker-compose.test.yml up -d",
    "test:watch": "jest --watch",
    "posttest:watch": "docker compose --env-file .env.test.local -f docker-compose.test.yml down -v",
    "pretest:cov": "docker compose --env-file .env.test.local -f docker-compose.test.yml down -v; docker compose --env-file .env.test.local -f docker-compose.test.yml up -d",
    "test:cov": "jest --coverage",
    "posttest:cov": "docker compose --env-file .env.test.local -f docker-compose.test.yml down -v",
    "pretest:debug": "docker compose --env-file .env.test.local -f docker-compose.test.yml down -v; docker compose --env-file .env.test.local -f docker-compose.test.yml up -d",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "posttest:debug": "docker compose --env-file .env.test.local -f docker-compose.test.yml down -v",
    "pretest:e2e": "docker compose --env-file .env.test.local -f docker-compose.test.yml down -v; docker compose --env-file .env.test.local -f docker-compose.test.yml up -d",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "posttest:e2e": "docker compose --env-file .env.test.local -f docker-compose.test.yml down -v"
  },
  "dependencies": {
    "@mikro-orm/core": "^6.3.9",
    "@mikro-orm/mongodb": "^6.3.9",
    "@mikro-orm/nestjs": "^6.0.2",
    "@mikro-orm/reflection": "^6.3.9",
    "@nestjs/axios": "^3.0.3",
    "@nestjs/common": "^10.4.1",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.1",
    "@nestjs/mapped-types": "^2.0.5",
    "@nestjs/platform-express": "^10.4.1",
    "@nestjs/swagger": "^7.4.0",
    "axios": "^1.7.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^6.3.9",
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.16.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
